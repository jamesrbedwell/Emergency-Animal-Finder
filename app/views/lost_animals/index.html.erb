<h2 class="page-title">Lost Animals</h2>

<div class="search-bar">
  <form action="" class="search-form">
    <input type="text" class="search-input">
    <button>Search</button>
  </form>
</div>

<div class="map-wrapper">
  <div id="mapContainer"></div>
</div>

<div id="lost-animal-data" data-animals="<%= @lost_map_data.to_json %>"></div>

<div class="results-container">
  <% @lost_animals.each do |animal| %>
    <div class="animal-item" onclick="location.href='<%= lost_animal_path(animal)%>'">
      <p class="tags"><%= animal.tags.join(' // ') %></p>
      <div class="item-header">
        <h3><%= animal.species.capitalize %> lost in <%= animal.location_lost %></h3>
      </div>
      <div class="item-content">
        <img src="<%= animal.image %>" alt="Lost <%= animal.species %>">
        <h4>Lost at: <span><%= animal.location_lost %></span></h4>
        <h4>Date lost: <span><%= animal.date_lost.strftime("%a, %d-%h-%G") %></span></h4>
      </div>
    </div>
  <% end %>
</div>